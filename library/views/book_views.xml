<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="book_view_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_ids"/>
            </search>
        </field>
    </record>


    <record id="book_view_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="isbn"/>
            </tree>
        </field>
    </record>


    <record id="book_view_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_left">
                        <h1>
                            <field name="name" placeholder="Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="edition_date"/>
                            <field name="isbn"/>
                        </group>
                        <group>
                            <field name="author_ids" widget="many2many_tags" domain="[('partner_type','=','author')]"/>
                            <field name="publisher_id"/>
                        </group>
                    </group>
                    <field name="rental_ids">
                        <tree editable="top" default_order="return_date">
                            <field name="customer_id" domain="[('partner_type','=','customer')]"/>
                            <field name="rental_date"/>
                            <field name="return_date"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="book_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>